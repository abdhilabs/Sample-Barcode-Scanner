<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Scanned Value: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="{{please scan first}}"
        app:layout_constraintBottom_toBottomOf="@+id/txtValueLabel"
        app:layout_constraintLeft_toRightOf="@id/txtValueLabel"
        app:layout_constraintTop_toTopOf="@+id/txtValueLabel" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Scan"
        app:layout_constraintEnd_toEndOf="@+id/txtValueLabel"
        app:layout_constraintStart_toStartOf="@+id/txtValueLabel"
        app:layout_constraintTop_toBottomOf="@id/txtValueLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>